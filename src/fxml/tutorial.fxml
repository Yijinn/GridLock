<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="550.0" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TutorialController">
   <children>
      <ImageView id="imageView" fx:id="imageView" fitHeight="350.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
      <Label id="instructionLabel" fx:id="instructionLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="500.0" text="Label" textAlignment="CENTER">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button id="prevButton" fx:id="prevButton" mnemonicParsing="false" onAction="#loadPrevImage" prefHeight="50.0" prefWidth="100.0" text="Previous" />
            <Button id="nextButton" fx:id="nextButton" mnemonicParsing="false" onAction="#loadNextImage" prefHeight="50.0" prefWidth="100.0" text="Next" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <Button id="returnButton" fx:id="returnButton" mnemonicParsing="false" onAction="#returnToMenu" prefHeight="50.0" prefWidth="250.0" text="Return to Main Menu">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
